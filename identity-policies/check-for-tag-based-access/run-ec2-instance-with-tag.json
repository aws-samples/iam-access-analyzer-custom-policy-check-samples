{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": "*",
        "Resource": "*"
      },
      {
        "Effect": "Deny",
        "Action": "ec2:RunInstances",
        "Resource": "*",
        "Condition": {
          "Null": {
            "aws:RequestTag/use-your-own-tag-key-here": "true"
          }
        }
      }
    ]
}